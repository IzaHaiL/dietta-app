<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.Video.View.VideoDetailView">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue" />

    <VideoView
        android:id="@+id/videoPlayer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/videoPlayer"
        android:layout_marginTop="-30dp"
        android:background="@drawable/bg_home"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="20dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/tvTitleVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul Video"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

      <TextView
          android:id="@+id/tvCategory"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="kategori"/>

        <TextView
            android:id="@+id/tvDescVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="lorem ippusm"
            android:textColor="@color/white" />

    </LinearLayout>

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="30dp"
      android:text="Tambah Ke Jadwal"
      android:layout_alignParentBottom="true"/>

</RelativeLayout>